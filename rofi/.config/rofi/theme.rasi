@theme "./colors.rasi"
* {
    font: "JetBrainsMono Nerd Font Mono 14";
}

/*****----- Global Properties -----*****/
* {    
    BG:    @backgroundA;
    BGA:   @color11;
    FG:    @foreground;
    FGA:   #F28FADff;
    BDR:   @color14;
    SEL:   @background;
    PLA:   @color3;
    UGT:   #F28FADff;
    IMG:   #FAE3B0ff;
    OFF:   #575268ff;
    ON:    #ABE9B3ff;
}

/* ---- Window ---- */
window {
    transparency:                   "real";
    background-color:               @BG;
    text-color:                     @FG;
    border:                         1px;
    border-color:                   @BDR;
    border-radius:                  10px;
    width:                          500px;
    height:                         101%;
    location:                       west;
    anchor:                         west;
    x-offset:                       -5;
    y-offset:                       0;
}

prompt {
    enabled: 			            true;
    background-color: 		        transparent;
    text-color: 		            @IMG;
}

textbox-prompt-colon {
    expand: 			            false;
    str: 			                "ï€‚";
    font: "JetBrainsMono Nerd Font Mono 14";
    border-radius:                  100%;
    background-color:               transparent;
    text-color:                     @PLA;
    padding:                        8px 12px 8px 12px;
}

entry {
    background-color:               transparent;
    text-color:                     @FG;
    placeholder-color:              @PLA;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search";
    blink:                          true;
    border-color:                   @BDR;
    border-radius:                  10px;
    padding:                        8px;
}

inputbar {
	children: 		                [ textbox-prompt-colon, entry ];
    background-color:               @BG;
    text-color:                     @FG;
    expand:                         false;
    border:                  	    0px 0px 1px 0px;
    border-radius:                  10px;
    border-color:                   @BDR;
    margin:                         0px 0px 0px 0px;
    padding:                        0px;
    position:                       center;
}

case-indicator {
    background-color:               @BG;
    text-color:                     @FG;
    spacing:                        0;
}


listview {
    background-color:               transparent;
    columns:                        1;
    lines:			                7;
    spacing:                        4px;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

/* ---- Scrollbar ---- */
scrollbar {
  border:							1px;
  border-radius:					10px;
  background-color:					@SEL;
  handle-color: 					@BDR;
  handle-width: 					2px ;
  padding:      					0;
}

mainbox {
    background-color:               @BG;
    children:                       [ inputbar, message, listview ];
    spacing:                        8px;
    padding:                        8px;
}

element {
    background-color:               transparent;
    text-color:                     @FG;
    orientation:                    horizontal;
    padding:                        8px;
    spacing:                        0;
}

element-icon {
    background-color: 	            transparent;
    text-color:       		        transparent;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           30px;
    border:                         0px;
}

element-text {
    background-color: 		        inherit;
    text-color:       		        inherit;
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         2px 0px 2px 2px;
}


element normal.urgent,
element alternate.urgent {
    background-color:               @UGT;
    text-color:                     @FG;
    border-radius:                  10px;
}

element normal.active,
element alternate.active {
    background-color:               @BGA;
    text-color:                     @SEL;
    border-radius:                  10px;
}

element-text selected,
element selected {
    background-color:               @BGA;
    text-color:                     #000000;
    border:                  	    0px 0px 0px 0px;
    border-radius:                  10px;
    border-color:                   @BDR;
}

element selected.urgent {
    background-color:               @UGT;
    text-color:                     @FG;
}

element selected.active {
    background-color:               @BGA;
    color:                          @FG;
}

/*****----- Message -----*****/
message {
    background-color:            	transparent;
    border:                      	0px;
}
error-message {
    padding:                        20px;
}
textbox {
    padding:                        10px;
    border-radius:                  10px;
	background-color:               @BDR;
    text-color:                     @SEL;
    vertical-align:                 0.5;
    horizontal-align:               0.5;
}
